<Page
    x:Class="MoneyNote.Views.SettingPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MoneyNote.Views"
    xmlns:custom="using:MoneyNote.UserControls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Pivot>
            <PivotItem Header="통장관리">
                <custom:BankBookManage />
            </PivotItem>
            <PivotItem Header="수입분류">
                <Grid>
                    <custom:CategorySetting Division="Income" />
                </Grid>
            </PivotItem>
            <PivotItem Header="지출분류">
                <ScrollViewer>
                    <custom:CategorySetting Division="Expense" />
                </ScrollViewer>
            </PivotItem>
            <PivotItem Header="초기화">
                <ScrollViewer>
                    <custom:MainSetting />
                </ScrollViewer>
            </PivotItem>
        </Pivot>
    </Grid>
</Page>
